<div class="card">
  <div class="card-header">
    <h3 class="card-title text-white"><i class="far fa-image"></i> Upload an Image</h3>
  </div>
  <div class="card-body">
    <form action="/images" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input type="file" name="image" class="custom-file-input" id="inputGroup" required />
            <label class="custom-file-label" for="inputGroup">Choose file ...</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <input
          type="text"
          name="tittle"
          class="form-control"
          placeholder="Title for the image"
          required
        />
      </div>
      <div class="form-group">
        <textarea
          name="description"
          class="form-control"
          rows="2"
          placeholder="Description for the image"
          required
        ></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">
          <i class="fas fa-upload"></i> Upload Image
        </button>
      </div>
    </form>
  </div>
</div>
